<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a6cf8f"
        android:padding="10dp">

        <!-- TextView들을 포함하는 LinearLayout -->
        <LinearLayout
            android:id="@+id/linearLayoutInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="이름 :"
                    android:fontFamily="@font/gmarketmedium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gmarketmedium"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    tools:text="USER NAME" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="구매날짜 : "
                    android:fontFamily="@font/gmarketmedium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/packagingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gmarketmedium"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    tools:text="0000-00-00" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="다회용컵/개인컵 :"
                    android:fontFamily="@font/gmarketmedium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/reusableCup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gmarketmedium"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    tools:text="O" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="다회용기 :"
                    android:fontFamily="@font/gmarketmedium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/reusableContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gmarketmedium"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    tools:text="X" />

            </LinearLayout>

            <Button
                android:layout_marginLeft="280px"
                android:id="@+id/btn_delete_cred"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:background="@drawable/delete_btn"
                android:textColor="#f2ef9b"
                android:textStyle="bold"
                android:fontFamily="@font/gmarketmedium"
                android:text="삭  제" />
        </LinearLayout>

        <!-- ImageView -->
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="4dp"
            android:padding="5dp"

            android:src="@drawable/planet_earth" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
